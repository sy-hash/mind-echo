default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    key_args = {
      key_id: ENV.fetch("ASC_KEY_ID"),
      issuer_id: ENV.fetch("ASC_ISSUER_ID"),
    }
    if ENV["ASC_KEY_CONTENT"]
      key_args[:key_content] = ENV.fetch("ASC_KEY_CONTENT")
    else
      key_args[:key_filepath] = ENV.fetch("ASC_KEY_PATH")
    end
    api_key = app_store_connect_api_key(**key_args)

    if ENV["BUILD_NUMBER"]
      increment_build_number(
        xcodeproj: "MindEcho/MindEcho.xcodeproj",
        build_number: ENV["BUILD_NUMBER"],
      )
    else
      increment_build_number(
        xcodeproj: "MindEcho/MindEcho.xcodeproj",
      )
    end

    build_args = {
      workspace: "MindEcho.xcworkspace",
      scheme: "MindEcho",
      export_method: "app-store",
    }

    if ENV["PROVISIONING_PROFILE_UUID"]
      profile_uuid = ENV["PROVISIONING_PROFILE_UUID"]
      build_args[:xcargs] = "CODE_SIGN_STYLE=Manual CODE_SIGN_IDENTITY='Apple Distribution' PROVISIONING_PROFILE='#{profile_uuid}'"
      build_args[:export_options] = {
        signingStyle: "manual",
        provisioningProfiles: {
          "com.syhash.MindEcho" => profile_uuid,
        },
      }
    end

    build_app(**build_args)

    upload_to_testflight(api_key: api_key)
  end
end
